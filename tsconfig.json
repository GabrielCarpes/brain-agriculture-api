{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "incremental": false,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@helpers/*": [
        "shared/helpers/*"
      ],
      "@infra/*": [
        "shared/infra/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@/*": [
        "*"
      ],
      "@root/*": [
        "../*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts"
  ]
}